<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/course_list_xrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <ProgressBar
        android:id="@+id/course_list_progressbar"
        android:layout_width="@dimen/progressbar_middle_size"
        android:layout_height="@dimen/progressbar_middle_size"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:indeterminateTint="@color/grey_b2b2b2"
        />

</FrameLayout>
